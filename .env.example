# ==============================================
# JOBIFIES ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================
# Copy this file to .env and fill in your values
# Never commit .env files to version control

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=5000
API_VERSION=v1
APP_NAME=Jobifies
APP_VERSION=1.0.0

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://username:password@localhost:5432/jobifies_dev
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=5000

# Database SSL settings
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_POOL_MIN=5
REDIS_POOL_MAX=20
REDIS_TTL=3600

# Redis password (if required)
# REDIS_PASSWORD=your_redis_password

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Password hashing
BCRYPT_ROUNDS=12

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Login rate limiting
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_PATH=./uploads
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email templates
FROM_EMAIL=noreply@jobifies.com
FROM_NAME=Jobifies Team
ADMIN_EMAIL=admin@jobifies.com

# Email service provider (optional)
# SENDGRID_API_KEY=your_sendgrid_api_key
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_mailgun_domain

# ==============================================
# PAYMENT GATEWAYS
# ==============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Razorpay (for Indian market)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================
# Social Auth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Application Monitoring
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id

# APM (Application Performance Monitoring)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Jobifies

# ==============================================
# EXTERNAL APIS
# ==============================================
# Job board APIs
INDEED_PUBLISHER_ID=your_indeed_publisher_id
GLASSDOOR_PARTNER_ID=your_glassdoor_partner_id
GLASSDOOR_API_KEY=your_glassdoor_api_key

# Location services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Background job processing
# BULL_REDIS_URL=redis://localhost:6379
# BULL_UI_USERNAME=admin
# BULL_UI_PASSWORD=secure_password

# ==============================================
# SECURITY HEADERS & FEATURES
# ==============================================
HELMET_ENABLED=true
TRUST_PROXY=true
ENABLE_HTTPS_REDIRECT=false

# Content Security Policy
CSP_REPORT_URI=/csp-report
CSP_REPORT_ONLY=false

# HSTS (HTTP Strict Transport Security)
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# ==============================================
# CACHING CONFIGURATION
# ==============================================
CACHE_TTL=3600
CACHE_MAX_ENTRIES=1000
ENABLE_RESPONSE_COMPRESSION=true

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_JOB_ALERTS=true
ENABLE_COMPANY_REVIEWS=true

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Only for development
ENABLE_API_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_DEBUG_MODE=false
MOCK_EMAIL_SERVICE=true

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/jobifies_test
TEST_REDIS_URL=redis://localhost:6379/1