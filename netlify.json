{
  "build": {
    "base": "frontend",
    "command": "npm run build",
    "publish": ".next"
  },
  "functions": {
    "directory": "netlify/functions"
  },
  "redirects": [
    {
      "from": "/api/*",
      "to": "https://jobifies-backend.onrender.com/api/:splat",
      "status": 200,
      "force": true
    },
    {
      "from": "/*",
      "to": "/index.html",
      "status": 200
    }
  ],
  "headers": [
    {
      "source": "/*",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}