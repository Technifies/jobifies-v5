{
  "name": "jobifies-frontend",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://jobifies-v5-backend.onrender.com/api/v1/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://jobifies-v5-backend.onrender.com/api/v1",
    "NEXT_PUBLIC_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}